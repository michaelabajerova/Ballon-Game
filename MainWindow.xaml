<Window x:Class="Ballon_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ballon_Game"
        mc:Ignorable="d"
        Title="Ballon Popping Game" Height="600" Width="450" ResizeMode="CanMinimize">
    <Canvas Name="MyCanvas" Focusable="True" MouseLeftButtonDown="PopBaloons" Background="White">
        <Label FontSize="24" Name="scoreText" Content="Score : 0" FontWeight="ExtraBold" Grid.ColumnSpan="2" Canvas.Top="512" />
    </Canvas>
</Window>
